{
  "extends": "@snaplet/tsconfig",
  "compilerOptions": {
    "rootDirs": ["src", "assets"],
    "outDir": "dist",
    "emitDeclarationOnly": false,
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo",
    "paths": {
      "#*": ["./src/*"],
    }
  },
  "include": [
    "src",
    "assets/index.ts",
    "global.d.ts"
  ],
  "exclude": [
    "src/**/*.test.ts",
  ],
}